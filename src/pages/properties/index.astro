---
// src/pages/properties/index.astro
import Layout from '@/layouts/Layout.astro';
import PropertyCard from '@/components/PropertyCard.astro';
import { getProperties } from '@/lib/cosmic';

const properties = await getProperties();
---

<Layout 
  title="All Properties - LFG Properties"
  description="Browse all available vacation rental properties. Find your perfect accommodation with detailed listings and photos."
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">All Properties</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Discover {properties.length} unique vacation rentals and accommodations
      </p>
    </div>

    {properties.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {properties.map((property) => (
          <PropertyCard property={property} className="animate-fade-in" />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <div class="text-6xl mb-4">üè†</div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">No Properties Found</h2>
        <p class="text-gray-600 mb-8">
          We're currently updating our property listings. Please check back soon!
        </p>
        <a href="/" class="btn-primary">
          Return Home
        </a>
      </div>
    )}
  </div>
</Layout>