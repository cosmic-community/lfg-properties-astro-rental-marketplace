---
// src/pages/index.astro
import Layout from '@/layouts/Layout.astro';
import PropertyCard from '@/components/PropertyCard.astro';
import LocationCard from '@/components/LocationCard.astro';
import HostCard from '@/components/HostCard.astro';
import { getProperties, getLocations, getHosts } from '@/lib/cosmic';

// Fetch data for the homepage
const properties = await getProperties();
const locations = await getLocations();
const hosts = await getHosts();

// Get featured content (first few items)
const featuredProperties = properties.slice(0, 3);
const featuredLocations = locations.slice(0, 2);
const featuredHosts = hosts.slice(0, 2);
---

<Layout 
  title="LFG Properties - Find Your Perfect Rental"
  description="Discover unique vacation rentals and accommodations with LFG Properties. Book your perfect stay with trusted hosts worldwide."
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-primary-600 to-primary-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-balance">
          Find Your Perfect Stay
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-primary-100 max-w-3xl mx-auto text-balance">
          Discover unique vacation rentals and accommodations with trusted hosts worldwide
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/properties" class="btn bg-white text-primary-600 hover:bg-gray-50 text-lg px-8 py-3">
            Browse Properties
          </a>
          <a href="/locations" class="btn border-white text-white hover:bg-white hover:text-primary-600 text-lg px-8 py-3">
            Explore Locations
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Properties -->
  {featuredProperties.length > 0 && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Properties</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Handpicked accommodations offering exceptional experiences
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredProperties.map((property) => (
            <PropertyCard property={property} className="animate-fade-in" />
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a href="/properties" class="btn-primary text-lg px-8 py-3">
            View All Properties
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Popular Locations -->
  {featuredLocations.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Popular Destinations</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Explore amazing cities with unique accommodations
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {featuredLocations.map((location) => (
            <LocationCard location={location} className="animate-fade-in" />
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a href="/locations" class="btn-outline text-lg px-8 py-3">
            See All Locations
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Featured Hosts -->
  {featuredHosts.length > 0 && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Meet Our Hosts</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Trusted hosts providing exceptional hospitality
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {featuredHosts.map((host) => (
            <HostCard host={host} className="animate-fade-in" />
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a href="/hosts" class="btn-outline text-lg px-8 py-3">
            Meet All Hosts
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Stats Section -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold mb-2">{properties.length}+</div>
          <div class="text-primary-100">Properties Available</div>
        </div>
        <div>
          <div class="text-4xl font-bold mb-2">{locations.length}+</div>
          <div class="text-primary-100">Cities & Locations</div>
        </div>
        <div>
          <div class="text-4xl font-bold mb-2">{hosts.length}+</div>
          <div class="text-primary-100">Trusted Hosts</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Ready to Book Your Stay?</h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Join thousands of satisfied guests who have found their perfect accommodation through LFG Properties
      </p>
      <a href="/properties" class="btn-primary text-lg px-8 py-3">
        Start Exploring
      </a>
    </div>
  </section>
</Layout>